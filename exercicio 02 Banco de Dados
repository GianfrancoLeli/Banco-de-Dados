Schema SQL

CREATE TABLE cliente (
id_cliente INTEGER PRIMARY KEY AUTOINCREMENT,
nome TEXT NOT NULL
);
ALTER TABLE cliente ADD COLUMN cpf TEXT;



CREATE TABLE atendente (
id_atendente INTEGER PRIMARY KEY AUTOINCREMENT,
nome TEXT NOT NULL
);
ALTER TABLE atendente ADD COLUMN codigo TEXT;



CREATE TABLE atendente_pedido (
id_atendente_pedido INTEGER PRIMARY KEY);



CREATE TABLE pedido (
id_pedido INTEGER PRIMARY KEY AUTOINCREMENT);



CREATE TABLE mesa (
id_mesa INTEGER PRIMARY KEY AUTOINCREMENT, 
capacidade TEXT NOT NULL
);
ALTER TABLE mesa ADD COLUMN ubicaçao TEXT;



CREATE TABLE cardapio (TEXT,nome TEXT NOT NULL
);
ALTER TABLE cardapio ADD COLUMN item TEXT

